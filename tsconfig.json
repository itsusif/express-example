{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowArbitraryExtensions": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./dist",
  },
  "exclude": [
    "node_modules",
    "dist",
    "global.d.ts"
  ]
}